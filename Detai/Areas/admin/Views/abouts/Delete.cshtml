@model Detai.Models.about

@{
    ViewBag.Title = "Delete";
}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2 class="m-0 font-weight-bold text-danger">Bạn chắc chắn muốn xóa giới thiệu này?</h2>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    Hình ảnh
                </dt>

                <dd>
                    <img src="~/Content/images/@Model.img" width="70px" />
                </dd>

                <dt>
                    Tiêu đề
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.title)
                </dd>

                <dt>
                    Tên
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>

                <dt>
                    Lời giới thiệu
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.detail)
                </dd>

                <dt>
                    Đường dẫn Facebook
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.linkfb)
                </dd>

                <dt>
                    Đường dẫn Instagram
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.linkig)
                </dd>

                <dt>
                    Đường dẫn Twitter
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.linktwitter)
                </dd>

            </dl>
        </div>
    </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </div>
            }
</div>
