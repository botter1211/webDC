@model Detai.Models.logo

@{
    ViewBag.Title = "Details";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2 class="m-0 font-weight-bold text-primary">Chi tiết logo</h2>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    Hình ảnh
                </dt>

                <dd>
                    <img src="~/Content/images/logo/@Model.img" width="50px" />
                </dd>

                <dt>
                    Vị trí
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order)
                </dd>

                <dt>
                    Hiển thị
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.hide)
                </dd>

                <dt>
                    Ngày cập nhật
                </dt>

                <dd>
                    @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")
                </dd>

            </dl>
        </div>
     </div>
        <p>
            <a class="btn btn-danger" href="@Url.Action("Index","logoes")">Quay lại</a>
        </p>
</div>
