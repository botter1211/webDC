@model Detai.Models.logo

@{
    ViewBag.Title = "Edit";
}
<div class="container-fluid">
     <div class="card shadow mb-4">
         <div class="card-header py-3">
             <h2 class="m-0 font-weight-bold text-primary">Chỉnh sửa logo</h2>
         </div>
         <div class="card-body">
             <div class="table">
                  @using (Html.BeginForm("Edit", "logoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
                  {
                      @Html.AntiForgeryToken()

                      <div class="form-horizontal">
                           
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.id)

                            <div class="form-group">
                                @Html.Label("Hình ảnh", htmlAttributes: new { @class = "control-label col-md-6" })
                               
                                    <div class="col-md-6">
                                        <input type="file" name="img" id="img" accept=".jpg,.gif,.png,.jpeg,.bmp" />
                                    </div>
                                    <div class="col-md-4">
                                        <img src="~/Content/images/logo/@Model.img" width="70px" />
                                    </div>
                                </div>
                            

                            <div class="form-group">
                                @Html.Label("Vị trí", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.order, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.order, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Hiển thị", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-12">
                                    <div class="checkbox">
                                        @{
                                            bool hide = (Model.hide.GetValueOrDefault(false) ? true : false);
                                        }
                                        @Html.CheckBoxFor(model => hide, new { style = "margin: -1px 5px" })

                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-dark" />
                                    <a class="btn btn-danger" href="@Url.Action("Index","logoes")">Quay lại</a>
                                </div>
                            </div>
                        </div>
                  }
              </div>
          </div>
      </div>
</div>
