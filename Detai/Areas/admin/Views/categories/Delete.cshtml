@model Detai.Models.category

@{
    ViewBag.Title = "Delete";
    
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h2 class="m-0 font-weight-bold text-danger">Bạn chắc chắn muốn xóa danh mục này?</h2>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    Tên danh mục
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>

                <dt>
                    Đường dẫn
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.link)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.meta)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.meta)
                </dd>

                <dt>
                    Hiển thị
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.hide)
                </dd>

                <dt>
                    Vị trí
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.order)
                </dd>

                <dt>
                    Ngày cập nhật
                </dt>

                <dd>
                    @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")
                </dd>

            </dl>
        </div>
    </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    
                </div>
            }
</div>
